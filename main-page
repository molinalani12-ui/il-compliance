  <script>
    // Mobile menu toggle
    const burger = document.getElementById('burger');
    const menu = document.getElementById('menu');
    burger?.addEventListener('click', () => menu.classList.toggle('open'));

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Basic client-side validation & UX for Formspree
    const form = document.getElementById('quoteForm');
    const note = document.getElementById('formNote');
    form?.addEventListener('submit', async (e) => {
      // Let the normal POST happen, but show a quick note
      note.textContent = 'Submitting…';
      setTimeout(() => { note.textContent = 'Thank you! If you do not see a success page, we\'ll still receive your request.' }, 2000);
    });
  </script>
